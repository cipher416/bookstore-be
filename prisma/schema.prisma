generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider  = "postgresql"
  url       = env("DATABASE_URL")
  directUrl = env("DIRECT_URL")
}

enum OrderStatus {
  IN_PROGRESS
  CANCELED
}

model User {
  UserId String @id @default(uuid())
  Email String @unique
  Password String
  Points BigInt @default(100)
  Cart Cart[]
  Order OrderHeader[]
}

model Book {
  BookId String @id @default(uuid())
  BookTitle String
  BookWriterName String
  BookImageURL String
  BookPrice BigInt
  BookTags BookTag[]
  Carts Cart[]
  Orders OrderDetail[]
}

model Tag {
  TagId String @id @default(uuid())
  TagName String
  BookTags BookTag[]
}

model BookTag {
  BookId String 
  TagId String 
  Book Book @relation(fields: [BookId], references: [BookId])
  Tag Tag @relation(fields: [TagId], references: [TagId])
  @@id([BookId, TagId])
} 

model Cart {
  UserId String 
  BookId String
  Quantity BigInt
  User User @relation(fields: [UserId], references: [UserId])
  Book Book @relation(fields: [BookId], references: [BookId])
  @@id([UserId, BookId])
}

model OrderHeader {
  UserId String
  OrderId String @id @default(uuid())
  OrderStatus OrderStatus
  OrderDate DateTime @default(now())
  User User @relation(fields: [UserId], references: [UserId])
  OrderDetails OrderDetail[]
}

model OrderDetail {
  OrderId String @default(uuid())
  BookId String
  Quantity BigInt
  OrderHeader OrderHeader @relation(fields: [OrderId], references: [OrderId])
  Book Book @relation(fields: [BookId], references: [BookId])
  @@id([BookId, OrderId])
}